<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/unconventionalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNCONVENTIONAL PROCESSES REQUIRE UNCONVENTIONAL PEOPLE"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:textColor="#2b2d50"
            android:fontFamily="@font/arbutus"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/cyberStruggleMotive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We bring the special forces mindset and doctrine to the cyber world!"
            android:textAlignment="center"
            android:layout_below="@id/unconventionalTextView"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/cyberStruggleMotiveDescriptionOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Many scholars define Cyber as an additional domain alongside air, land, sea, and space. However, for us, this definition falls short and fails to assist the cybersecurity community in addressing today’s truly asymmetric and unconventional processes. Instead, we view cyber as a framework encompassing all other domains!"
            android:layout_below="@id/cyberStruggleMotive"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/cyberStruggleMotiveDescriptionTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We clearly need a more effective approach. This isn’t just a warfare; it’s a never-ending struggle, akin to the work of special forces. These forces are trained not only in hybrid technical skills, but also in soft skills such as mental resilience, teamwork, leadership, and performance under high pressure, among others, to ensure functionality and productivity."
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:layout_below="@id/cyberStruggleMotiveDescriptionOne"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:id="@+id/cyberStruggleMotiveDescriptionThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From this perspective, Cyber Struggle: Where technical acumen meets emotional resilience. Experience a transformative cybersecurity education in a dynamically changing, real-world simulated environment. We call it functional development."
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/cyberStruggleMotiveDescriptionTwo"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="5dp"
            android:justificationMode="inter_word"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/cyberStruggleEagleLogoOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cyber_struggle_eagle_logo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="0dp"
            android:layout_below="@id/cyberStruggleMotiveDescriptionThree"
            />

        <TextView
            android:id="@+id/appreciatePeopleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We appreciate machines and technologies, but we still believe in people!"
            android:layout_below="@id/cyberStruggleEagleLogoOrange"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/individualsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individuals who want to make a significant difference and corporates who are keen to have special forces mindset in their teams"
            android:layout_below="@id/appreciatePeopleTextView"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <LinearLayout
            android:id="@+id/simulationLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/individualsTextView"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/simulation"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S46 SIMULATION and RANGE"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:justificationMode="inter_word"
                        android:text="S46‘s cyber range simulator is the first of its kind to immerse a unique AI-based layer on top of the tech drills scenarios that can indicate behavioral and psychological alerts such as stress, mental-toughness, burn-out, resilience, leadership capacity, and adaptability of trainees."
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/courses"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COURSES &amp; CERTIFICATIONS"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our acceleration programs stand out by equipping soc analysts, blue and purple team members, and cyber incident front-liners with technically hybrid skills, a holistic security perspective, and a resilient, primed mindset through interdisciplinary and functional training."
                        android:layout_marginBottom="20dp"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>