<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cyber_struggle_cool_eagle"
            />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:layout_toRightOf="@id/team_image"
            android:layout_toEndOf="@id/team_image"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/team_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:fontFamily="@font/anuphan_medium"
            android:layout_toRightOf="@id/team_image"
            android:layout_toEndOf="@id/team_image"
            android:layout_below="@id/team_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#a9a9a9"
            />
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>